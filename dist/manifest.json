{
  "manifest_version": 3,
  "name": "TextBot",
  "description": "This extension lets you insert text from GPT in any text box on any webpage.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-16px.png",
    "32": "icons/icon-32px.png",
    "48": "icons/icon-48px.png",
    "128": "icons/icon-128px.png"
  },
  "action": {
    "default_title": "Go to this extension's Options to configure your GPT prompts"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "options_page": "options/index.html",
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ]
}
